<div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-semibold mb-4">Lista de Productos</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <!-- Iterar sobre cada producto -->
        {{#each data.products}}
        <div class="bg-white p-4 rounded shadow-2xl">
            <img src="/{{this.productId.thumbnails}}" alt="{{this.productId.title}}" class="w-full h-48 object-cover mb-4">
            <h2 class="text-2xl text-center font-bold mb-2">{{this.productId.title}} </h2>
            <p class="text-gray-500 mb-2">{{this.productId.description}}</p>
            <p class="text-gray-800 font-semibold mb-2">Precio unitario: ${{this.productId.price}}</p>
            <p class="text-gray-500 mb-2">Código: {{this.productId.code}}</p>
            <p class="text-gray-500 mb-2">Categoría: {{this.productId.category}}</p>

            <!-- Cantidad en el carrito -->
            <p class="mt-4 text-xl">Cantidad en el carrito: <strong>{{this.quantity}}</strong></p>
        </div>
        {{/each}}
    </div>
</div>